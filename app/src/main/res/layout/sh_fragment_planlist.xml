<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/planRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/planTvNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="등록된 일정이 없습니다.
일정을 추가해주세요."
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="visible"/>


    <FrameLayout
        android:id="@+id/fl3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/fl2"
        android:visibility="invisible">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/baseline_done_white_24dp"
            app:backgroundTint="@android:color/holo_blue_light"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:layout_gravity="bottom|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 계획"
            android:textColor="#843939"
            android:background="#ededed"
            android:layout_gravity="center|left"
            android:paddingHorizontal="5dp"/>

    </FrameLayout>


    <FrameLayout
    android:id="@+id/fl2"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_above="@+id/fl1"
    android:visibility="invisible">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/baseline_done_all_white_24dp"
            app:backgroundTint="@android:color/holo_blue_light"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:layout_gravity="bottom|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 계획"
            android:textColor="#843939"
            android:background="#ededed"
            android:layout_gravity="center|left"
            android:paddingHorizontal="5dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/fab"
        android:visibility="invisible">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/baseline_home_white_24dp"
            app:backgroundTint="@android:color/holo_blue_light"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:layout_gravity="bottom|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 보기"
            android:textColor="#843939"
            android:background="#ededed"
            android:layout_gravity="center|left"
            android:paddingHorizontal="5dp"/>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/plus_icon"
        app:backgroundTint="@android:color/holo_blue_light"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        />

</RelativeLayout>