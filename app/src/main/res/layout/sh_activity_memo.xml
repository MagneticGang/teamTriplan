<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:weightSum="8">

    <TextView
        android:id="@+id/memoTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="memoTitle"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/memoContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="20dp"
        android:text="memoContent"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/memoContent_m"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:visibility="gone"
        android:background="#fffbea"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <Button
            android:id="@+id/btnMemoModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정 하기"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btnMemoModify_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="수정 전송"
            android:background="@color/colorAccent"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btnMemoClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"/>



    </LinearLayout>
</LinearLayout>