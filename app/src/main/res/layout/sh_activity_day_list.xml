<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dayTvNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="등록된 일정이 없습니다.

일정을 추가해주세요."
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/dayTop"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:id="@+id/dayHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정보기"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/btnDayBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dayTop"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvPlanName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="아아아아아아"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tvPlanPeriod2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPlanName2"
                    android:layout_marginLeft="10dp"
                    android:text="2010.10.10 ~ 2010.10.10 (10일)"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="#88000000"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userImg"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvUserNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="양밥"
                        android:textColor="#fff" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dayRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dddddd"/>
    </LinearLayout>


</RelativeLayout>